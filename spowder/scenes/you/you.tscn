script/source = "
extends Tutorial

@export var rotator : Node3D
@export var max_rotation : float

var accumulated_rotation : float
var rotation_prev : Vector3

func _check_complete() -> bool:
	accumulated_rotation += rotator.global_rotation.angle_to(rotation_prev)
	rotation_prev = rotator.global_rotation
	return rad_to_deg(accumulated_rotation) >= max_rotation
	
"

